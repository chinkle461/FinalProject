@model Reservation.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}
<div class="cdeContainer">
    <br />
    <h3>Are you sure you want to delete this User?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserName):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="clearfix"></div>
            <div class="FooterLeft">
                <input type="submit" value="Delete" class="btn btn-danger rounded" />
            </div>
            <div class="DeleteFooterRight">@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-warning rounded" })</div>
            <div class="clearfix"></div>
        </div>
        <br />  
        }
    </div>
</div>