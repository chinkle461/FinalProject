@model Reservation.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "User Details";
}

<div class="cdeContainer">
    <br />
    <h2>@ViewBag.Title</h2>
    <br />
    <div>
        <dl class="dl-horizontal">
            <dt>
                @*@Html.DisplayNameFor(model => model.UserName)*@User Email:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>
    </div>
    <h4>List of roles for this user</h4>
    @if (ViewBag.RoleNames.Count == 0)
    {
        <p>No roles found for this user.</p>
    }

    <table class="table">
        @foreach (var item in ViewBag.RoleNames)
        {
            <tr>
                <td>
                    @item
                </td>
            </tr>
        }
    </table>
    <div class="form-group">
        <div class="clearfix"></div>
        <div class="FooterLeft">
            @Html.ActionLink("Edit", "Edit", null, new { id = Model.Id }, new { @class = "btn btn-primary rounded" })
        </div>
        <div class="FooterRight">@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger rounded" })</div>
        <div class="clearfix"></div>
    </div>
    <br />
</div>