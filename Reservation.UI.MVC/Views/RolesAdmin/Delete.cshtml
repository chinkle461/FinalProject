@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}
<div class="cdeContainer">
    <br />
    <h3>Are you sure you want to delete this Role? </h3>
    <p>Deleting this Role will remove all users from this role. It will not delete the users.</p>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="clearfix"></div>
            <div class="FooterLeft">
                <input type="submit" value="Delete" class="btn btn-danger rounded" />
            </div>
            <div class="DeleteFooterRight">@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-warning rounded" })</div>
            <div class="clearfix"></div>
        </div>
        <br />  
        }
    </div>
</div>